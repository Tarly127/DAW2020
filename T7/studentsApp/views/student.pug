extends layout


block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left #{std.nome}
        -var num = std.numero
        button.w3-btn.w3-round-large.w3-white.w3-right.w3-margin <a href="/students/editar/#{num}">Edit</a>
        button.w3-btn.w3-round-large.w3-white.w3-right.w3-margin <a href="/students/delete/#{num}">Delete</a>
      ul
        li <b>Name:</b>   #{std.nome}
        li <b>Number:</b> #{std.numero}
        -var git = std.git
        li <b>Github:</b> 
          a(href=git) #{std.git}
        li <b>Homework</b>
          ul
            -for(var i = 1; i <= 8; i++)
              -var tpc_eq = std.git.split('.')[0] + '.' + std.git.split('.')[1] + '/tree/master/T' + i
              if std.tpc[i-1] == 0
                li(style="color:red") #{i} : Not Delivered
              else
                if std.git
                  li(style="color:green") #{i} : <a href=#{tpc_eq}> Delivered </a>
                else
                  li(style="color:green") #{i} : Delivered          

      footer.w3-container.w3-teal
        address Gerado por studentsApp::DAW2020
        a(href="/students") Voltar Ã  Home
  
